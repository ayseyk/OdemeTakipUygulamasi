<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvBaslik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bar_background"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPeriyot"
        app:layout_constraintEnd_toStartOf="@+id/btnOdemeEkleAna"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPeriyot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bar_background"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPeriyotGunu"
        app:layout_constraintEnd_toEndOf="@+id/tvBaslik"
        app:layout_constraintStart_toStartOf="@+id/tvBaslik"
        app:layout_constraintTop_toBottomOf="@+id/tvBaslik" />

    <TextView
        android:id="@+id/tvPeriyotGunu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bar_background"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvPeriyot"
        app:layout_constraintStart_toStartOf="@+id/tvPeriyot"
        app:layout_constraintTop_toBottomOf="@+id/tvPeriyot" />

    <Button
        android:id="@+id/btnOdemeEkleAna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Ã–deme Ekle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>