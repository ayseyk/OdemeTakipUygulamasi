<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bar_background"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvBaslik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPeriyot"
        app:layout_constraintEnd_toStartOf="@+id/btnOdemeEkleAna"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPeriyot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:inputType="textMultiLine"
        android:paddingStart="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPeriyotGunu"
        app:layout_constraintEnd_toEndOf="@+id/tvBaslik"
        app:layout_constraintStart_toStartOf="@+id/tvBaslik"
        app:layout_constraintTop_toBottomOf="@+id/tvBaslik" />

    <TextView
        android:id="@+id/tvPeriyotGunu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:inputType="textMultiLine"
        android:paddingStart="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvPeriyot"
        app:layout_constraintStart_toStartOf="@+id/tvPeriyot"
        app:layout_constraintTop_toBottomOf="@+id/tvPeriyot" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOdemeEkleAna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/odemeEkle"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>